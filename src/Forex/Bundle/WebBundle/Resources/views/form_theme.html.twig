{% block form_row %}
{% spaceless %}
    <div class="form-group{% if form.vars.errors|length %} has-error{% endif %}">
        {{ form_label(form, null, {label_attr: {class: 'form-label'}}) }}
        {{ form_widget(form, {attr: {class: 'form-control'}}) }}
        {{ form_errors(form) }}
    </div>
{% endspaceless %}
{% endblock form_row %}
