{% extends "ForexWebBundle:Layout:nosidebar.html.twig" %}

{% block content %}
    <h2>Contact Us</h2>

    <div class="row">
        <div class="span4">
            <h3><i class="icon-phone icon-large"></i> Call Us</h3>
            <h4><a href="tel:1234567890">1234567890</a></h4>
            <p>You can call us directly during business hours, otherwise leave a message and we will get back to you promptly.</p>
        </div>

        <div class="span4">
            <h3><i class="icon-envelope icon-large"></i> Email Us</h3>
            <p>Email us at <a href="mailto:help@forexcashback.com">help@forexcashback.com</a> or use the form below.</p>
            <form>
                {{ form_widget(contactForm) }}
                <button class="button">Submit</button>
            </form>
        </div>

        <div class="span4">
            <h3><i class="icon-facetime-video icon-large"></i> Skype Us</h3>
            <h4><a href="skype:forexcashback">forexcashback</a></h4>
        </div>
    </div>
{% endblock %}
