{% extends "ForexWebBundle:Layout:nosidebar.html.twig" %}

{% block title %}My Broker Trading Accounts - {% endblock %}

{% block content %}
    <h2>My Broker Trading Accounts</h2>

    <table class="table">
        <tr>
            <th>Account ID</th>
            <th>Brokerage</th>
            <th>Account Number</th>
            <th>Account Status</th>
        </tr>
        {% for account in user.accounts %}
            <tr>
                <td>{{ account.id }}</td>
                <td>{{ account.broker.name }}</td>
                <td>{{ account.accountNumber}}</td>
                <td class="{% if account.status == 'verified'%}text-success{% elseif account.status == 'unverified' %}text-info{% else %}text-error{% endif %}">{{ account.status }}</td>
            </tr>
        {% endfor %}
    </table>

    <a href="{{ path('account_add') }}" class="btn">Add Account</a>
{% endblock %}
