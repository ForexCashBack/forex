<!DOCTYPE html>
<html>
<head lang="en">
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <link href='http://fonts.googleapis.com/css?family=Arapey|Noto+Sans' rel='stylesheet' type='text/css'>
    <title>{% block title 'Forex Cash Back' %}</title>
    {% stylesheets 'css/main.less' filter='less' output='css/main.css' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
    <link rel="stylesheet" href="../components/font-awesome/build/assets/font-awesome/css/font-awesome.min.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body class="{% block body_class '' %}">
    <div class="navbar navbar-inverse navbar-static-top">
        <div class="navbar-inner">
            <div class="container">
                <button type="button" class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="brand" href="/">Forex Cash Back</a>
                <div class="nav-collapse collapse">
                    <ul class="nav">
                        <li><a href="/">Home</a></li>
                        <li class="dropdown navbar-dropdown">
                            <a href="{{ path('faq') }}" class="dropdown-toggle" data-toggle="dropdown">FAQs <b class="caret"></b></a>
                            <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
                                <li><a tabindex="-1" href="{{ path('payment-methods') }}">Payment Methods</a></li>
                                <li><a tabindex="-1" href="{{ path('faq') }}">General FAQs</a></li>
                            </ul>
                        </li>
                        <li><a href="{{ path('brokers') }}">Brokers</a></li>
                        <li><a href="{{ path('contact') }}">Contact Us</a></li>
                        <li><a href="{{ path('referral-program') }}">Referral Program</a></li>
                    </ul>
                    <ul class="nav pull-right">
                        {% if is_granted('ROLE_USER') %}
                            <li class="dropdown navbar-dropdown">
                                <a href="{{ path('fos_user_profile_show') }}" class="dropdown-toggle" data-toggle="dropdown" data-target="#"><i class="icon-home"></i> My Account <b class="caret"></b></a>
                                <ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu">
                                    <li><a tabindex="-1" href="{{ path('fos_user_profile_show') }}">My Profile</a></li>
                                    <li><a tabindex="-1" href="{{ path('account_list') }}">My Brokerage Accounts</a></li>
                                    <li><a tabindex="-1" href="{{ path('payout_list') }}">My Payouts</a></li>
                                    <li class="divider"></li>
                                    <li><a tabindex="-1" href="{{ path('referral_home') }}">My Referrals</a></li>
                                </ul>
                            </li>
                            <li class="divider-vertical"></li>
                            <li><a href="{{ path('fos_user_security_logout') }}">Logout</a></li>
                        {% else %}
                            <a href="{{ path('fos_user_security_login') }}" class="navbar-text">Login</a>
                            |
                            <a href="{{ path('fos_user_registration_register') }}" class="navbar-text">Create Account</a>
                        {% endif %}
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <div class="container main-content">
        <div class="row">
            {% for type, messages in app.session.flashbag.all() %}
                {% for message in messages %}
                    <div class="alert alert-{{ type }}">
                        <strong>{{ message }}</strong>
                        <button type="button" class="close" data-dismiss="alert">Ã—</a>
                    </div>
                {% endfor %}
            {% endfor %}
        </div>

        {% block content 'Default Content' %}
    </div>

    <footer class="footer navbar navbar-inverse navbar-fixed-bottom">
        <div class="navbar-inner">
            <div class="container">
                <span class="brand">&copy; 2013 ForexCashBack</span>
                <div class="navbar-collapse">
                    <ul class="nav  pull-right">
                        <li><a href="{{ path('fos_user_registration_register') }}">Create Account</a></li>
                        <li class="divider-vertical"></li>
                        <li><a href="">Terms of Use</a></li>
                        <li class="divider-vertical"></li>
                        <li><a href="" >Privacy Policy</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    {% javascripts
        'components/jquery/jquery.js'
        'components/bootstrap/js/*'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
</body>
</html>
